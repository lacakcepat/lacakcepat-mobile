<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient android:angle="0" android:endColor="@color/colorSecondary" android:startColor="@color/colorPrimary" />
            <size android:height="@dimen/fabStandard" android:width="@dimen/fabStandard" />
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorDividePrimary" />
            <size android:height="@dimen/fabStandard" android:width="@dimen/fabStandard" />
        </shape>
    </item>

</selector>