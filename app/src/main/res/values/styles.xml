<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoAnimation">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="NoActionBarAndAnim" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!-- Text -->
    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TextHeadingPrimary">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/textHeadingPrimary</item>
    </style>

    <style name="TextBodyPrimary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/textBodyPrimary</item>
    </style>

    <style name="TextButtonPrimary">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textButtonPrimary</item>
    </style>

    <style name="TextCaptionPrimary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/textCaptionPrimary</item>
    </style>

    <style name="TextCaptionSecondary">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/textCaptionSecondary</item>
    </style>


    <style name="TextContent.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextBodyPrimary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCaptionPrimary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.ExtraSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Button -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundConditionStatus" parent="TextBodyPrimary">
        <item name="android:layout_marginTop">@dimen/small_spacing</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:padding">@dimen/tiny_spacing</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Covid Case-->

</resources>
